{
  "name": "LIFE Algorithm Development",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylance",
        "ms-toolsai.jupyter",
        "ryanluker.vscode-coverage-gutters",
        "github.copilot",
        "ms-azuretools.vscode-azurelogicapps"
      ]
    }
  },
  "postCreateCommand": "pip install -r requirements.txt && pip install -r requirements-test.txt",
  "forwardPorts": [
    8000
  ],
  "portsAttributes": {
    "8000": {
      "label": "LIFE Health App",
      "onAutoForward": "notify"
    }
  }
}
